<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password | RSR HRMS</title>

    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700;800&display=swap"
        rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">

    <style>
        :root {
            --rsr-blue: #0052cc;
            --rsr-text: #222222;
            --rsr-text-light: #717171;
            --rsr-border: #ebebeb;
            --rsr-bg: #f7f9fc;
        }

        body {
            background-color: var(--rsr-bg);
            font-family: 'Plus Jakarta Sans', sans-serif;
            color: var(--text-main);
            letter-spacing: -0.01em;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        .login-wrapper {
            width: 100%;
            max-width: 450px;
            padding: 20px;
        }

        .login-card {
            background: #ffffff;
            border: 1px solid var(--rsr-border);
            border-radius: 24px;
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.06);
            padding: 40px;
        }

        .brand-logo {
            color: var(--rsr-blue);
            font-size: 2rem;
            margin-bottom: 10px;
        }

        .login-header h2 {
            font-weight: 800;
            font-size: 1.75rem;
            letter-spacing: -0.04em;
            margin-bottom: 8px;
        }

        .login-header p {
            color: var(--rsr-text-light);
            font-size: 0.95rem;
            margin-bottom: 32px;
        }

        /* Form Controls */
        .form-label {
            font-weight: 700;
            font-size: 0.85rem;
            margin-bottom: 8px;
            color: var(--rsr-text);
        }

        .input-group {
            border: 1px solid var(--rsr-border);
            border-radius: 12px;
            overflow: hidden;
            transition: border-color 0.2s;
        }

        .input-group:focus-within {
            border-color: var(--rsr-blue);
            box-shadow: 0 0 0 3px rgba(0, 82, 204, 0.1);
        }

        .input-group-text {
            background: transparent;
            border: none;
            color: var(--rsr-text-light);
            padding-left: 16px;
        }

        .form-control {
            border: none;
            padding: 14px 16px;
            font-size: 0.95rem;
        }

        .form-control:focus {
            box-shadow: none;
        }

        /* Button */
        .btn-login {
            background-color: var(--rsr-blue);
            color: white;
            border: none;
            border-radius: 12px;
            padding: 14px;
            font-weight: 700;
            font-size: 1rem;
            margin-top: 10px;
            transition: all 0.2s;
        }

        .btn-login:hover {
            background-color: #0043a8;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(0, 82, 204, 0.2);
        }

        .alert-custom {
            border-radius: 12px;
            font-size: 0.85rem;
            font-weight: 600;
            border: none;
        }

        .alert-danger-custom {
            background-color: #fff1f0;
            color: #d85140;
        }
    </style>
</head>

<body>

    <div class="login-wrapper">
        <div class="login-card">

            <div class="login-header text-center">
                <div class="brand-logo">
                    <i class="fa-solid fa-lock-open"></i>
                </div>
                <h2>Reset Password</h2>
                <p>Create a new strong password for your account.</p>
            </div>

            <% if (typeof error !=="undefined" ) { %>
                <div class="alert alert-custom alert-danger-custom d-flex align-items-center mb-4">
                    <i class="fa-solid fa-circle-exclamation me-2"></i>
                    <%= error %>
                </div>
                <% } %>

                    <form method="POST" action="/auth/reset-password/<%= token %>" novalidate class="needs-validation">

                        <div class="mb-3">
                            <label class="form-label">New Password</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fa-solid fa-key"></i>
                                </span>
                                <input type="password" name="password" class="form-control" placeholder="••••••••"
                                    required minlength="6">
                            </div>
                            <div class="invalid-feedback">Password must be at least 6 characters.</div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Confirm Password</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fa-solid fa-check-double"></i>
                                </span>
                                <input type="password" name="confirmPassword" class="form-control"
                                    placeholder="••••••••" required minlength="6">
                            </div>
                            <div class="invalid-feedback">Please confirm your new password.</div>
                        </div>

                        <div class="d-grid">
                            <button class="btn btn-login">
                                Reset Password
                            </button>
                        </div>

                    </form>
        </div>

        <div class="text-center mt-4">
            <p class="small text-muted">© 2026 RSR Aviation Group</p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        (() => {
            'use strict'
            const forms = document.querySelectorAll('.needs-validation')
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    const password = form.querySelector('input[name="password"]');
                    const confirm = form.querySelector('input[name="confirmPassword"]');

                    if (password.value !== confirm.value) {
                        confirm.setCustomValidity("Passwords do not match");
                    } else {
                        confirm.setCustomValidity("");
                    }

                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)

                // Clear validation on input
                const inputs = form.querySelectorAll('input');
                inputs.forEach(input => {
                    input.addEventListener('input', () => {
                        input.setCustomValidity("");
                    });
                });
            })
        })()
    </script>

</body>

</html>