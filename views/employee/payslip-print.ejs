<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payslip - <%= payslip.month %>
            <%= payslip.year %> - <%= employee.firstName %>
                    <%= employee.lastName %>
    </title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap');

        body {
            font-family: 'Roboto', sans-serif;
            background: #f5f5f5;
            padding: 40px;
            color: #000;
        }

        .payslip-container {
            max-width: 900px;
            margin: 0 auto;
            background: #fff;
            padding: 40px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        /* Header Section */
        .header-section {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 30px;
            border-bottom: 2px solid #000;
            padding-bottom: 20px;
        }

        .company-logo img {
            max-width: 150px;
            height: auto;
        }

        .company-details {
            text-align: right;
            font-size: 0.9rem;
        }

        .company-name {
            font-size: 1.4rem;
            font-weight: 700;
            text-transform: uppercase;
            margin-bottom: 5px;
            letter-spacing: 0.5px;
        }

        .slip-title {
            text-align: center;
            font-size: 1.3rem;
            font-weight: 500;
            margin: 20px 0 30px;
            text-transform: capitalize;
            border-bottom: 1px solid #ddd;
            line-height: 0.1em;
        }

        .slip-title span {
            background: #fff;
            padding: 0 10px;
        }

        /* Employee Details */
        .emp-details-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 30px;
            font-size: 0.95rem;
        }

        .detail-row {
            display: flex;
            margin-bottom: 5px;
        }

        .detail-label {
            font-weight: 700;
            width: 120px;
        }

        .detail-val {
            flex: 1;
        }

        /* Earnings & Deductions Table */
        .salary-table {
            width: 100%;
            border-collapse: collapse;
            font-size: 0.95rem;
            margin-bottom: 10px;
            border: 1px solid #ddd;
        }

        .salary-table th {
            background-color: #f8f9fa;
            padding: 12px;
            text-align: left;
            border: 1px solid #ddd;
            font-weight: 700;
            text-transform: uppercase;
            font-size: 0.85rem;
        }

        .salary-table td {
            padding: 12px;
            border: 1px solid #ddd;
            vertical-align: top;
        }

        .amount-col {
            text-align: right;
            font-family: monospace;
            font-size: 1rem;
        }

        .total-row td {
            background-color: #f8f9fa;
            font-weight: 700;
            border-top: 2px solid #000;
        }

        .net-pay-section {
            margin-top: 20px;
            padding: 15px;
            border: 1px solid #000;
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #f8f9fa;
        }

        .print-btn-container {
            text-align: center;
            margin-top: 40px;
        }

        @media print {
            body {
                background: white;
                padding: 0;
                -webkit-print-color-adjust: exact;
                print-color-adjust: exact;
            }

            .payslip-container {
                box-shadow: none;
                padding: 20px;
                width: 100%;
                max-width: 100%;
            }

            .print-btn-container {
                display: none !important;
            }
        }
    </style>
</head>

<body>

    <div class="payslip-container">
        <!-- Header -->
        <div class="header-section">
            <div class="company-logo">
                <img src="/images/rsr.jpg" alt="RSR Aviation Logo">
            </div>
            <div class="company-details">
                <div class="company-name">RSR Aviation Services Pvt. Ltd.</div>
                <div>Unit No-B-67,68 Platinum Spring, Plot 6, G-20 to G-24</div>
                <div>Taloja MIDC, Navde, Panvel - 410208, Mumbai, India.</div>
                <div class="mt-2"><strong>CIN:</strong> U12345MH2023PTC123456</div>
            </div>
        </div>

        <h2 class="slip-title"><span>Salary Slip For The Month Of
                <% const monthNames=["January", "February" , "March" , "April" , "May" , "June" , "July" , "August"
                    , "September" , "October" , "November" , "December" ]; let displayMonth="" ; let
                    slipYear=payslip.year; if (typeof payslip.month==='number' ) { if (payslip.month>= 1 &&
                    payslip.month <= 12) { displayMonth=monthNames[payslip.month - 1]; } else { displayMonth="Unknown" ;
                        } } else { displayMonth=payslip.month; } %>
                        <%= displayMonth %>
                            <%= slipYear %>
            </span></h2>

        <!-- Employee Info -->
        <div class="emp-details-grid">
            <div class="left-col">
                <div class="detail-row">
                    <div class="detail-label">Name:</div>
                    <div class="detail-val">
                        <%= employee.firstName %>
                            <%= employee.lastName %>
                    </div>
                </div>
                <div class="detail-row">
                    <div class="detail-label">Employee ID:</div>
                    <div class="detail-val">
                        <%= employee.employeeCode %>
                    </div>
                </div>
                <div class="detail-row">
                    <div class="detail-label">Department:</div>
                    <div class="detail-val">
                        <%= employee.department %>
                    </div>
                </div>
                <div class="detail-row">
                    <div class="detail-label">Designation:</div>
                    <div class="detail-val">
                        <%= employee.designation %>
                    </div>
                </div>
                <div class="detail-row">
                    <div class="detail-label">Location:</div>
                    <div class="detail-val">
                        <%= employee.workLocation || 'Hyderabad' %>
                    </div>
                </div>
                <div class="detail-row">
                    <div class="detail-label">Address:</div>
                    <div class="detail-val">
                        <%= employee.address || 'Not Provided' %>
                    </div>
                </div>
            </div>
            <div class="right-col">
                <div class="detail-row">
                    <div class="detail-label">Payslip ID:</div>
                    <div class="detail-val">#<%= payslip._id.toString().slice(-8).toUpperCase() %>
                    </div>
                </div>
                <div class="detail-row">
                    <div class="detail-label">Payment Date:</div>
                    <div class="detail-val">
                        <%= new Date().toLocaleDateString('en-IN') %>
                    </div>
                </div>
                <div class="detail-row">
                    <div class="detail-label">Bank Name:</div>
                    <div class="detail-val">
                        <%= (employee.bankDetails && employee.bankDetails.bankName) ? employee.bankDetails.bankName
                            : '-' %>
                    </div>
                </div>
                <div class="detail-row">
                    <div class="detail-label">Account No:</div>
                    <div class="detail-val">
                        <%= (employee.bankDetails && employee.bankDetails.accountNumber) ? 'XXXX' +
                            employee.bankDetails.accountNumber.slice(-4) : '-' %>
                    </div>
                </div>
                <div class="detail-row">
                    <div class="detail-label">LOP Days:</div>
                    <div class="detail-val">
                        <%= payslip.lopDays || 0 %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Calculations -->
        <% const basic=payslip.basicSalary || 0; const allowances=payslip.allowances || 0; const bonuses=payslip.bonuses
            || 0; const totalEarnings=basic + allowances + bonuses; const deductions=payslip.deductions || 0; const
            taxes=payslip.taxes || 0; const totalDeductions=deductions + taxes; const netPay=payslip.netPay ||
            (totalEarnings - totalDeductions); const fmt=(n)=> n.toLocaleString('en-IN', { minimumFractionDigits: 2,
            maximumFractionDigits: 2 });
            %>

            <table class="salary-table">
                <thead>
                    <tr>
                        <th width="50%">Earnings</th>
                        <th width="15%" class="text-end">Amount (INR)</th>
                        <th width="2%"></th>
                        <th width="33%">Deductions</th>
                        <th width="15%" class="text-end">Amount (INR)</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Row 1 -->
                    <tr>
                        <td>Basic Salary</td>
                        <td class="amount-col">
                            <%= fmt(basic) %>
                        </td>
                        <td></td>
                        <td>Provident Fund (PF)</td>
                        <td class="amount-col">
                            <%= fmt(payslip.pf || 0) %>
                        </td>
                    </tr>

                    <!-- Row 2 -->
                    <tr>
                        <td>House Rent Allowance (HRA)</td>
                        <td class="amount-col">
                            <%= fmt(payslip.hra || 0) %>
                        </td>
                        <td></td>
                        <td>Professional Tax</td>
                        <td class="amount-col">
                            <%= fmt(payslip.professionalTax || 0) %>
                        </td>
                    </tr>

                    <!-- Row 3 -->
                    <tr>
                        <td>Travel Allowance</td>
                        <td class="amount-col">
                            <%= fmt(payslip.travelAllowance || 0) %>
                        </td>
                        <td></td>
                        <td>Income Tax (TDS)</td>
                        <td class="amount-col">
                            <%= fmt(taxes) %>
                        </td>
                    </tr>

                    <!-- Row 4 -->
                    <tr>
                        <td>
                            <% if ((payslip.hra || 0) + (payslip.travelAllowance || 0) + (payslip.otherAllowances ||
                                0)===0 && (payslip.allowances || 0)> 0) { %>
                                Special / Other Allowances
                                <% } else { %>
                                    Other Allowances
                                    <% } %>
                        </td>
                        <td class="amount-col">
                            <% if ((payslip.hra || 0) + (payslip.travelAllowance || 0) + (payslip.otherAllowances ||
                                0)===0 && (payslip.allowances || 0)> 0) { %>
                                <%= fmt(payslip.allowances) %>
                                    <% } else { %>
                                        <%= fmt(payslip.otherAllowances || 0) %>
                                            <% } %>
                        </td>
                        <td></td>
                        <td>
                            <% // Filter out PF and PT from details since we showed them above const
                                otherDetails=(payslip.deductionDetails || []).filter(d=> d.type !== 'PF' && d.type !==
                                'PT');
                                %>
                                <% if (otherDetails.length> 0) { %>
                                    <% otherDetails.forEach((d, index)=> { %>
                                        <div class="text-danger small">
                                            <%= d.label %>: <%= fmt(d.amount) %>
                                        </div>
                                        <% }) %>
                                            <% } else { %>
                                                Other Deductions
                                                <% } %>
                        </td>
                        <td class="amount-col">
                            <% const otherDetailsSum=(payslip.deductionDetails || []) .filter(d=> d.type !== 'PF' &&
                                d.type !== 'PT')
                                .reduce((acc, curr) => acc + curr.amount, 0);
                                // Fallback to 'deductions' field if details empty but deductions > 0 (old records)
                                const finalOtherDeductions = otherDetails.length > 0 ? otherDetailsSum :
                                (payslip.deductions || 0);
                                %>
                                <%= fmt(finalOtherDeductions) %>
                        </td>
                    </tr>

                    <!-- Row 5 (Bonuses & Reimbursements) -->
                    <tr>
                        <td>Performance Bonus / Incentives</td>
                        <td class="amount-col">
                            <%= fmt(bonuses) %>
                        </td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td><strong>Claim Reimbursements</strong></td>
                        <td class="amount-col">
                            <%= fmt(payslip.reimbursements || 0) %>
                        </td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>

                    <!-- Totals -->
                    <% // Re-calculate totals correctly for display const dispTotalEarnings=(payslip.basicSalary||0) +
                        (payslip.allowances &&
                        ((payslip.hra||0)+(payslip.travelAllowance||0)+(payslip.otherAllowances||0)===0) ?
                        payslip.allowances :
                        ((payslip.hra||0)+(payslip.travelAllowance||0)+(payslip.otherAllowances||0))) +
                        (payslip.bonuses||0) + (payslip.reimbursements || 0); const dispTotalDeductions=(payslip.pf||0)
                        + (payslip.professionalTax||0) + (payslip.taxes||0) + (payslip.deductionDetails &&
                        payslip.deductionDetails.length> 0 ?
                        payslip.deductionDetails.filter(d => d.type !== 'PF' && d.type !== 'PT').reduce((a,c) =>
                        a+c.amount,0) :
                        (payslip.deductions||0));
                        %>

                        <tr class="total-row">
                            <td>TOTAL EARNINGS</td>
                            <td class="amount-col">
                                <%= fmt(dispTotalEarnings) %>
                            </td>
                            <td></td>
                            <td>TOTAL DEDUCTIONS</td>
                            <td class="amount-col">
                                <%= fmt(dispTotalDeductions) %>
                            </td>
                        </tr>
                </tbody>
            </table>

            <div class="net-pay-section">
                <div class="fs-5 fw-bold">NET SALARY PAYABLE</div>
                <div class="fs-4 fw-bold">â‚¹ <%= fmt(netPay) %>
                </div>
            </div>
            <div class="mt-2 text-muted small text-end">
                * This is a computer generated slip.
            </div>

            <div class="print-btn-container">
                <button onclick="window.print()" class="btn btn-primary btn-lg px-5 shadow">
                    <i class="fa-solid fa-print me-2"></i> Print / Save as PDF
                </button>
                <div class="mt-3">
                    <a href="/payslip/employee/<%= employee._id %>" class="text-decoration-none text-muted">Back to
                        List</a>
                </div>
            </div>

    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/js/all.min.js"></script>
</body>

</html>