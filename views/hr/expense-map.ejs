<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Expense Map & Tracking | HR Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <!-- Leaflet CSS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
        integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />

    <style>
        body {
            background-color: #f7f9fc;
        }

        .sidebar-list {
            height: calc(100vh - 100px);
            overflow-y: auto;
        }

        #map {
            height: calc(100vh - 100px);
            width: 100%;
            border-radius: 12px;
        }

        .expense-item {
            border-left: 4px solid transparent;
            transition: all 0.2s;
            cursor: pointer;
        }

        .expense-item:hover {
            background-color: #f0f7ff;
            border-left-color: #0052cc;
        }

        .avatar-small {
            width: 32px;
            height: 32px;
            background: #e2e8f0;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.8rem;
            font-weight: bold;
            color: #475569;
        }
    </style>
</head>

<body>

    <nav class="navbar navbar-dark bg-dark sticky-top px-3">
        <a class="navbar-brand fw-bold" href="/hr/dashboard"><i class="fa-solid fa-map-location-dot me-2"></i> Expense
            Tracker</a>
        <a href="/hr/dashboard" class="btn btn-sm btn-outline-light">Back to Dashboard</a>
    </nav>

    <div class="container-fluid mt-3">
        <div class="row g-3">

            <!-- Left Sidebar: Pending Lists -->
            <div class="col-lg-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-white fw-bold">
                        <i class="fa-solid fa-clock-rotate-left me-2 text-warning"></i> Pending Approvals
                    </div>
                    <div class="list-group list-group-flush sidebar-list">
                        <% if(pendingExpenses.length===0) { %>
                            <div class="p-4 text-center text-muted">No pending claims.</div>
                            <% } %>
                                <% pendingExpenses.forEach(exp=> { %>
                                    <div class="list-group-item expense-item p-3">
                                        <div class="d-flex justify-content-between mb-2">
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-small me-2">
                                                    <%= exp.employeeId.firstName.charAt(0) %>
                                                </div>
                                                <div>
                                                    <div class="fw-bold small">
                                                        <%= exp.employeeId.firstName %>
                                                            <%= exp.employeeId.lastName %>
                                                    </div>
                                                    <div class="text-muted" style="font-size: 11px;">
                                                        <%= exp.type %>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="fw-bold text-dark">â‚¹<%= exp.amount %>
                                            </div>
                                        </div>
                                        <p class="small text-secondary mb-2 fst-italic">"<%= exp.description %>"</p>

                                        <div class="d-flex gap-2 mt-2">
                                            <% if(exp.receiptPath) { %>
                                                <a href="<%= exp.receiptPath %>" target="_blank"
                                                    class="btn btn-sm btn-outline-secondary py-0"
                                                    style="font-size: 11px;">Receipt</a>
                                                <% } %>
                                                    <form action="/expense/hr/action/<%= exp._id %>" method="POST"
                                                        class="d-flex gap-1 ms-auto">
                                                        <input type="hidden" name="status" value="Approved">
                                                        <button class="btn btn-sm btn-success py-0"
                                                            style="font-size: 11px;">Approve</button>
                                                    </form>
                                                    <button onclick="reject('<%= exp._id %>')"
                                                        class="btn btn-sm btn-danger py-0"
                                                        style="font-size: 11px;">Reject</button>
                                        </div>
                                        <!-- Hidden reject form -->
                                        <form id="reject-form-<%= exp._id %>" action="/expense/hr/action/<%= exp._id %>"
                                            method="POST" class="mt-2 d-none">
                                            <input type="hidden" name="status" value="Rejected">
                                            <div class="input-group input-group-sm">
                                                <input type="text" name="reason" class="form-control"
                                                    placeholder="Reason..." required>
                                                <button class="btn btn-danger">Confirm</button>
                                            </div>
                                        </form>
                                    </div>
                                    <% }) %>
                    </div>
                </div>
            </div>

            <!-- Right: Map -->
            <div class="col-lg-8">
                <div class="card shadow-sm mb-3">
                    <div class="card-body p-0">
                        <div id="map"></div>
                    </div>
                    <div class="card-footer bg-white small text-muted">
                        <i class="fa-solid fa-info-circle me-1"></i> Showing last known locations of field staff
                        (Checked-in within last 24h).
                    </div>
                </div>

                <!-- Employee Selector -->
                <div class="card shadow-sm p-3">
                    <h6 class="fw-bold mb-3">Active Field Agents</h6>
                    <div class="d-flex gap-3 overflow-auto pb-2">
                        <% employeesOnMap.forEach(emp=> { %>
                            <div class="border rounded p-2 d-flex align-items-center bg-white"
                                style="min-width: 200px; cursor: pointer;"
                                onclick="focusMap('<%= emp.lastKnownLocation.lat %>', '<%= emp.lastKnownLocation.lng %>')">
                                <div class="avatar-small me-2">
                                    <%= emp.firstName.charAt(0) %>
                                </div>
                                <div>
                                    <div class="fw-bold small">
                                        <%= emp.firstName %>
                                    </div>
                                    <div class="text-muted" style="font-size: 10px;">
                                        <%= emp.lastKnownLocation.timestamp ? new
                                            Date(emp.lastKnownLocation.timestamp).toLocaleTimeString() : 'Unknown' %>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- Leaflet JS -->
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
        integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>

    <script>
        // Initialize Map
        var map = L.map('map').setView([20.5937, 78.9629], 5); // India Centered

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; OpenStreetMap contributors'
        }).addTo(map);

        // Add Markers from Server Data
        const employees = <% - JSON.stringify(employeesOnMap) %>;

        employees.forEach(emp => {
            if (emp.lastKnownLocation && emp.lastKnownLocation.lat) {
                const marker = L.marker([emp.lastKnownLocation.lat, emp.lastKnownLocation.lng]).addTo(map);
                marker.bindPopup(`<b>${emp.firstName} ${emp.lastName}</b><br>${emp.designation}<br><small>${new Date(emp.lastKnownLocation.timestamp).toLocaleString()}</small>`);
            }
        });

        function focusMap(lat, lng) {
            if (lat && lng) {
                map.flyTo([lat, lng], 15);
            }
        }

        function reject(id) {
            const form = document.getElementById('reject-form-' + id);
            form.classList.toggle('d-none');
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>