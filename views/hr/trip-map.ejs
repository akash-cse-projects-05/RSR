<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Trip Map & Distance | RSR HRMS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" crossorigin="" />
    <style>
        body {
            background-color: #f7f9fc;
            height: 100vh;
            display: flex;
            flex-direction: column;
        }

        #map {
            flex: 1;
            width: 100%;
            z-index: 1;
        }

        .info-panel {
            background: white;
            padding: 15px 20px;
            border-bottom: 1px solid #ddd;
            z-index: 1000;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        }

        .stat-box {
            background: #f8f9fa;
            padding: 10px 15px;
            border-radius: 8px;
            border: 1px solid #eee;
            min-width: 150px;
            text-align: center;
        }

        .stat-value {
            font-weight: 800;
            font-size: 1.1rem;
            color: #0052cc;
        }

        .stat-label {
            font-size: 0.75rem;
            text-transform: uppercase;
            color: #777;
            font-weight: 600;
        }
    </style>
</head>

<body>

    <div class="info-panel">
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <a href="/trip/hr/dashboard" class="btn btn-outline-dark btn-sm rounded-circle me-3"
                    style="width: 32px; height: 32px; display: flex; align-items: center; justify-content: center;"><i
                        class="fa-solid fa-arrow-left"></i></a>
                <div>
                    <h5 class="fw-bold mb-0 text-dark">
                        <%= trip.employeeId.firstName %>
                            <%= trip.employeeId.lastName %>
                    </h5>
                    <div class="d-flex align-items-center gap-2 small text-muted">
                        <i class="fa-solid fa-route"></i>
                        <span class="fw-bold text-dark">
                            <%= trip.source || 'Unknown' %>
                        </span>
                        <i class="fa-solid fa-arrow-right fa-xs"></i>
                        <span class="fw-bold text-dark">
                            <%= trip.destination %>
                        </span>
                    </div>
                </div>
            </div>

            <div class="d-flex gap-3">
                <div class="stat-box">
                    <div class="stat-value" id="dist-calc">Computing...</div>
                    <div class="stat-label">Est. Distance</div>
                </div>
                <div class="stat-box">
                    <div class="stat-value">
                        <%= trip.locations.length %>
                    </div>
                    <div class="stat-label">Check-Ins</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Daily Logs Panel -->
    <div class="card m-3 border-0 shadow-sm" style="max-height: 300px; overflow-y: auto;">
        <div class="card-header bg-white fw-bold">Daily Logs & Work Done</div>
        <div class="card-body p-0">
            <table class="table table-sm table-hover mb-0 small">
                <thead class="table-light">
                    <tr>
                        <th class="ps-3">Day</th>
                        <th>Start Location</th>
                        <th>End Location</th>
                        <th>Work Description</th>
                        <% if(typeof isOwner !=='undefined' && isOwner) { %>
                            <th>Action</th>
                            <% } %>
                    </tr>
                </thead>
                <tbody>
                    <% if(trip.dailyLogs && trip.dailyLogs.length> 0) { %>
                        <% trip.dailyLogs.forEach(log=> { %>
                            <tr>
                                <td class="ps-3">
                                    <%= log.date %>
                                </td>
                                <td>
                                    <%= log.startLocation ? log.startLocation.address : '-' %> <br> <span
                                            class="text-muted">
                                            <%= log.startTime ? new Date(log.startTime).toLocaleTimeString() : '' %>
                                        </span>
                                </td>
                                <td>
                                    <%= log.endLocation ? log.endLocation.address : '-' %> <br> <span
                                            class="text-muted">
                                            <%= log.endTime ? new Date(log.endTime).toLocaleTimeString() : '' %>
                                        </span>
                                </td>
                                <td class="text-wrap" style="max-width: 300px;" id="desc-<%= log._id %>">
                                    <%= log.tasksDone || 'No description provided' %>
                                </td>
                                <% if(typeof isOwner !=='undefined' && isOwner) { %>
                                    <td>
                                        <button class="btn btn-xs btn-outline-primary"
                                            onclick="editLog('<%= log._id %>', `<%= log.tasksDone || '' %>`)">
                                            <i class="fa-solid fa-pen"></i>
                                        </button>
                                    </td>
                                    <% } %>
                            </tr>
                            <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="5" class="text-center text-muted">No daily logs found.</td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <div id="map"></div>

    <!-- Edit Modal -->
    <div class="modal fade" id="editModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Work Description</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="editLogId">
                    <textarea id="editTaskDesc" class="form-control" rows="4"
                        placeholder="Describe work done..."></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="saveLog()">Save Changes</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" crossorigin=""></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const trip = <% - JSON.stringify(trip) %>;
        const map = L.map('map').setView([20.5937, 78.9629], 5);

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: 'Â© OpenStreetMap modules'
        }).addTo(map);

        // Geocode Function (Nominatim)
        async function getCoords(place) {
            try {
                const res = await fetch(`https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(place)}`);
                const data = await res.json();
                if (data && data.length > 0) return { lat: parseFloat(data[0].lat), lng: parseFloat(data[0].lon) };
            } catch (e) { console.error("Geocode failed", e); }
            return null;
        }

        async function initMap() {
            // 1. Plot Check-Ins & Path
            if (trip.locations && trip.locations.length > 0) {
                const latlngs = trip.locations.map(l => [l.lat, l.lng]);
                L.polyline(latlngs, { color: 'blue', weight: 4 }).addTo(map);

                // Add Markers for Significant Events only (Skip Pings)
                trip.locations.forEach((l) => {
                    if (l.type !== 'Ping' && l.type !== 'AutoArrival') {
                        let iconColor = 'blue';
                        let popupText = `<b>${l.type}</b><br>${new Date(l.timestamp).toLocaleString()}`;

                        if (l.type === 'Activity') {
                            iconColor = 'orange';
                            popupText = `<b>Activity:</b> ${l.note || ''}<br><small>${new Date(l.timestamp).toLocaleString()}</small>`;
                        } else if (l.type === 'StartTrip') {
                            iconColor = 'green';
                            popupText = `<b>Start Point</b><br>${new Date(l.timestamp).toLocaleString()}`;
                        }

                        L.circleMarker([l.lat, l.lng], {
                            radius: l.type === 'Activity' ? 8 : 6,
                            color: iconColor,
                            fillColor: '#fff',
                            fillOpacity: 1
                        }).addTo(map).bindPopup(popupText);
                    }
                });
            }

            // 2. Geocode Source & Dest for Planned Route
            const srcCoords = await getCoords(trip.source);
            const destCoords = await getCoords(trip.destination);

            if (srcCoords && destCoords) {
                L.marker([srcCoords.lat, srcCoords.lng]).addTo(map).bindPopup(`<b>Start:</b> ${trip.source}`);
                L.marker([destCoords.lat, destCoords.lng]).addTo(map).bindPopup(`<b>End:</b> ${trip.destination}`);
                const plannedLine = L.polyline([[srcCoords.lat, srcCoords.lng], [destCoords.lat, destCoords.lng]], {
                    color: 'gray', dashArray: '10, 10', weight: 2, opacity: 0.6
                }).addTo(map);
                map.fitBounds(plannedLine.getBounds(), { padding: [50, 50] });
                const distKm = (map.distance([srcCoords.lat, srcCoords.lng], [destCoords.lat, destCoords.lng]) / 1000).toFixed(1);
                document.getElementById('dist-calc').innerText = distKm + " km";
            } else {
                document.getElementById('dist-calc').innerText = "N/A";
            }
        }

        initMap();

        // Edit Logic
        const editModal = new bootstrap.Modal(document.getElementById('editModal'));

        function editLog(id, currentText) {
            document.getElementById('editLogId').value = id;
            document.getElementById('editTaskDesc').value = currentText;
            editModal.show();
        }

        async function saveLog() {
            const logId = document.getElementById('editLogId').value;
            const tasksDone = document.getElementById('editTaskDesc').value;

            try {
                const res = await fetch(`/trip/update-log/${trip._id}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ logId, tasksDone })
                });
                const d = await res.json();
                if (d.success) {
                    location.reload();
                } else {
                    alert('Error updating log');
                }
            } catch (e) { alert('Network error'); }
        }

    </script>
</body>

</html>