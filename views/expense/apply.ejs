<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Expense Claim | RSR HRMS</title>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700;800&display=swap"
        rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">

    <style>
        :root {
            --rsr-blue: #0052cc;
            --rsr-text: #222222;
            --rsr-bg: #f8f9fa;
        }

        body {
            background-color: var(--rsr-bg);
            font-family: 'Plus Jakarta Sans', sans-serif;
            color: var(--rsr-text);
        }

        .navbar {
            background: #fff !important;
            border-bottom: 1px solid #ebebeb;
            padding: 1rem 0;
        }

        .navbar-brand {
            font-weight: 800;
            color: var(--rsr-blue) !important;
        }

        .form-card {
            max-width: 600px;
            margin: 40px auto;
            background: #fff;
            padding: 40px;
            border-radius: 20px;
            border: 1px solid #ebebeb;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.03);
        }

        .form-label {
            font-weight: 700;
            font-size: 0.85rem;
            text-transform: uppercase;
            color: #717171;
        }

        .btn-main {
            background-color: var(--rsr-blue);
            color: white;
            border-radius: 12px;
            font-weight: 700;
            padding: 14px;
            width: 100%;
            border: none;
        }

        .btn-main:hover {
            background-color: #0043a8;
        }

        #location-status {
            font-size: 0.85rem;
            margin-top: 10px;
            font-weight: 600;
        }
    </style>
</head>

<body>
    <%- include('../partials/anti-cache') %>

        <nav class="navbar navbar-expand-lg sticky-top">
            <div class="container">
                <a class="navbar-brand" href="/dashboard"><i class="fa-solid fa-paper-plane me-2"></i> RSR AVIATION</a>
                <div class="ms-auto">
                    <a href="/expense/my-expenses" class="btn btn-outline-dark btn-sm rounded-pill px-3">My Claims</a>
                </div>
            </div>
        </nav>

        <div class="container pb-5">
            <div class="form-card">
                <div class="text-center mb-4">
                    <div class="bg-primary bg-opacity-10 text-primary d-inline-flex p-3 rounded-circle mb-3"><i
                            class="fa-solid fa-receipt fs-3"></i></div>
                    <h2 class="fw-bold">Submit Expense Claim</h2>
                    <p class="text-muted small">Upload receipts and tag your location for reimbursement.</p>
                </div>

                <form action="/expense/apply" method="POST" enctype="multipart/form-data" id="expenseForm">

                    <div class="mb-3">
                        <label class="form-label">Expense Category</label>
                        <select name="type" class="form-select" required>
                            <option value="Travel">Travel / Transport</option>
                            <option value="Food">Food / Meals</option>
                            <option value="Lodging">Lodging / Hotel</option>
                            <option value="Miscellaneous">Miscellaneous</option>
                        </select>
                    </div>

                    <div class="row mb-3">
                        <div class="col-6">
                            <label class="form-label">Amount (â‚¹)</label>
                            <input type="number" name="amount" class="form-control" placeholder="0.00" required>
                        </div>
                        <div class="col-6">
                            <label class="form-label">Date</label>
                            <input type="date" name="date" class="form-control" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description / Purpose</label>
                        <textarea name="description" class="form-control" rows="3"
                            placeholder="Visit to client site X..." required></textarea>
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Receipt Upload (Image/PDF)</label>
                        <input type="file" name="receipt" class="form-control" accept="image/*,.pdf" required>
                    </div>

                    <!-- Hidden Geolocation Fields -->
                    <input type="hidden" name="lat" id="lat">
                    <input type="hidden" name="lng" id="lng">

                    <div class="p-3 bg-light rounded mb-4 text-center">
                        <p class="mb-2 text-muted small"><i class="fa-solid fa-location-crosshairs me-1"></i> Location
                            Check</p>
                        <div id="location-status" class="text-warning">
                            <i class="fa-solid fa-spinner fa-spin"></i> Acquiring GPS coordinates...
                        </div>
                    </div>

                    <button type="submit" class="btn-main shadow-sm"><i class="fa-solid fa-paper-plane me-2"></i> Submit
                        Claim</button>
                </form>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            // Geo-Location Logic
            window.onload = function () {
                const status = document.getElementById('location-status');
                const latInput = document.getElementById('lat');
                const lngInput = document.getElementById('lng');

                if (!navigator.geolocation) {
                    status.textContent = "Geolocation is not supported by your browser";
                    status.className = "text-danger";
                } else {
                    status.textContent = "Locating...";
                    navigator.geolocation.getCurrentPosition(success, error, {
                        enableHighAccuracy: true,
                        timeout: 10000,
                        maximumAge: 0
                    });
                }

                function success(position) {
                    const latitude = position.coords.latitude;
                    const longitude = position.coords.longitude;
                    latInput.value = latitude;
                    lngInput.value = longitude;
                    status.innerHTML = `<span class="text-success"><i class="fa-solid fa-check-circle me-1"></i> Location Verified</span>`;
                }

                function error(err) {
                    console.warn(`ERROR(${err.code}): ${err.message}`);
                    status.innerHTML = `<span class="text-danger"><i class="fa-solid fa-circle-xmark me-1"></i> Location access denied/failed. Claim will be marked as non-geo-tagged.</span>`;
                }
            }
        </script>
</body>

</html>