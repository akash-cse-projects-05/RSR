<!DOCTYPE html>
<html>
<head>
  <title>HR Document Review</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
  <h2>Pending Documents for Review</h2>
  <table class="table">
    <thead>
      <tr>
        <th>User</th>
        <th>Name</th>
        <th>Type</th>
        <th>Uploaded At</th>
        <th>Download</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% documents.forEach(function(doc) { %>
        <tr>
          <td><%= doc.user.username %></td>
          <td><%= doc.name %></td>
          <td><%= doc.fileType %></td>
          <td><%= doc.uploadedAt.toLocaleString() %></td>
          <td>
            <a href="/documents/download/<%= doc._id %>" class="btn btn-sm btn-primary">Download</a>
          </td>
          <td>
            <form action="/documents/review/<%= doc._id %>/approve" method="POST" style="display:inline;">
              <button type="submit" class="btn btn-success btn-sm">Approve</button>
            </form>
            <form action="/documents/review/<%= doc._id %>/reject" method="POST" style="display:inline;">
              <button type="submit" class="btn btn-danger btn-sm">Reject</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
</body>
</html>