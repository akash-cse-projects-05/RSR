<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Live Staff Tracking | RSR HRMS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" crossorigin="" />
    <style>
        body {
            background-color: #f7f9fc;
            height: 100vh;
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }

        .sidebar {
            width: 350px;
            background: white;
            border-right: 1px solid #ddd;
            display: flex;
            flex-direction: column;
            z-index: 2;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.05);
        }

        .map-wrapper {
            flex: 1;
            position: relative;
            z-index: 1;
        }

        #map {
            height: 100%;
            width: 100%;
        }

        .user-list {
            flex: 1;
            overflow-y: auto;
            padding: 0;
        }

        .user-item {
            padding: 15px 20px;
            border-bottom: 1px solid #f0f0f0;
            cursor: pointer;
            transition: background 0.2s;
        }

        .user-item:hover {
            background: #f8f9fa;
        }

        .user-item.active {
            background: #e6f0ff;
            border-left: 4px solid #0052cc;
        }

        .status-dot {
            height: 10px;
            width: 10px;
            border-radius: 50%;
            display: inline-block;
            margin-right: 6px;
        }

        .status-active {
            background-color: #28a745;
        }

        .status-inactive {
            background-color: #ffc107;
        }

        .avatar {
            width: 40px;
            height: 40px;
            background: #eee;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            color: #555;
        }
    </style>
</head>

<body>

    <!-- Header -->
    <header class="bg-white border-bottom py-2 px-3 d-flex align-items-center justify-content-between z-3">
        <div class="d-flex align-items-center">
            <a href="/hr/dashboard" class="btn btn-outline-secondary btn-sm rounded-circle me-3"><i
                    class="fa-solid fa-arrow-left"></i></a>
            <h5 class="mb-0 fw-bold text-primary"><i class="fa-solid fa-satellite-dish me-2"></i> Live Staff Tracking
            </h5>
        </div>
        <div class="text-muted small">
            <span class="fw-bold text-dark">
                <%= trackedEmployees.length %>
            </span> Active Personnel
        </div>
    </header>

    <div class="d-flex flex-grow-1">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="p-3 bg-light border-bottom">
                <input type="text" class="form-control form-control-sm" placeholder="Search employee..." id="searchBox">
            </div>
            <div class="user-list" id="userList">
                <% trackedEmployees.forEach((emp, index)=> { %>
                    <div class="user-item"
                        onclick="focusUser('<%= emp._id %>', <%= emp.lastKnownLocation.lat %>, <%= emp.lastKnownLocation.lng %>)">
                        <div class="d-flex align-items-center">
                            <div class="avatar me-3">
                                <%= emp.firstName.charAt(0) %>
                            </div>
                            <div>
                                <h6 class="mb-0 fw-bold text-dark">
                                    <%= emp.firstName %>
                                        <%= emp.lastName %>
                                </h6>
                                <small class="text-muted">
                                    <%= emp.department %> • <%= emp.designation %>
                                </small>
                                <div class="mt-1 small">
                                    <span class="status-dot status-active"></span>
                                    <span class="text-secondary">
                                        <%= new Date(emp.lastKnownLocation.timestamp).toLocaleTimeString([],
                                            {hour:'2-digit', minute:'2-digit'}) %>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                        <% if(trackedEmployees.length===0) { %>
                            <div class="p-4 text-center text-muted">No location data available.</div>
                            <% } %>
            </div>
        </div>

        <!-- Map -->
        <div class="map-wrapper">
            <div id="map"></div>
        </div>
    </div>

    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" crossorigin=""></script>
    <script>
        const map = L.map('map').setView([20.5937, 78.9629], 5);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', { attribution: '© OpenStreetMap' }).addTo(map);

        const employees = <% - JSON.stringify(trackedEmployees) %>;
        const markers = {};

        employees.forEach(emp => {
            if (emp.lastKnownLocation && emp.lastKnownLocation.lat) {
                const lat = emp.lastKnownLocation.lat;
                const lng = emp.lastKnownLocation.lng;

                const marker = L.marker([lat, lng])
                    .bindPopup(`
                        <b>${emp.firstName} ${emp.lastName}</b><br>
                        ${emp.designation}<br>
                        <small class="text-muted">Updated: ${new Date(emp.lastKnownLocation.timestamp).toLocaleTimeString()}</small>
                    `)
                    .addTo(map);

                markers[emp._id] = marker;
            }
        });

        // Fit bounds if employees exist
        if (employees.length > 0) {
            const group = new L.featureGroup(Object.values(markers));
            map.fitBounds(group.getBounds(), { padding: [50, 50] });
        }

        function focusUser(id, lat, lng) {
            map.setView([lat, lng], 16);
            if (markers[id]) markers[id].openPopup();

            // Highlight list item
            document.querySelectorAll('.user-item').forEach(el => el.classList.remove('active'));
            // (Simple implementation, would be better with ID selector on element)
        }

        // Search Filter
        document.getElementById('searchBox').addEventListener('keyup', function (e) {
            const term = e.target.value.toLowerCase();
            document.querySelectorAll('.user-item').forEach(item => {
                const text = item.innerText.toLowerCase();
                item.style.display = text.includes(term) ? 'block' : 'none';
            });
        });

    </script>
</body>

</html>